{
  "name": "gigflow",
  "version": "1.0.0",
  "description": "A modern full-stack freelancing marketplace platform built with MERN stack",
  "keywords": [
    "mern",
    "react",
    "express",
    "mongodb",
    "freelancing",
    "marketplace",
    "socket.io",
    "jwt",
    "redux"
  ],
  "author": "ServiceHive",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "build": "cd client && npm run build",
    "start": "cd server && npm start"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}


